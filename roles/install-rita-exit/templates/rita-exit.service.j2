# This is a systemd service for Rita-exit
[Unit]
Description=rita-exit
Requires=network.target
After=babeld.service

[Service]
Type=simple
TimeoutStartSec=60
RestartSec=60
LimitNOFILE=65536
Restart=always
Environment=RUST_LOG=INFO
ExecStart=/usr/bin/rita_exit --config=/etc/rita-exit.toml

[Install]
WantedBy=default.target
