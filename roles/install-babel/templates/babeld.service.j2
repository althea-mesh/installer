# This is a systemd service for Babeld
[Unit]
Description=babeld
Requires=network.target
After=wiregaurd.service

[Service]
Type=simple
TimeoutStartSec=60
RestartSec=60
Restart=always
ExecStartPre=-/usr/bin/rm /var/run/babeld.pid
ExecStart=/usr/bin/babeld -c /etc/babeld.conf fake_interface

[Install]
WantedBy=default.target
